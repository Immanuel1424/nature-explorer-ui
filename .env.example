# Facility Management System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000/api
REACT_APP_API_TIMEOUT=10000

# Authentication
REACT_APP_AUTH_PROVIDER=local
REACT_APP_JWT_SECRET_KEY=your-jwt-secret-key-here

# Database (if using local development)
DATABASE_URL=postgresql://username:password@localhost:5432/facility_management
DATABASE_SSL=false

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=your-s3-bucket-name

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourcompany.com

# Application Settings
REACT_APP_APP_NAME=Facility Management System
REACT_APP_COMPANY_NAME=Your Company Name
REACT_APP_SUPPORT_EMAIL=support@yourcompany.com
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_REPORTS=true
REACT_APP_ENABLE_ANALYTICS=false

# Development Settings
NODE_ENV=development
PORT=3000
GENERATE_SOURCEMAP=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret-here
BCRYPT_ROUNDS=12

# Third-party Integrations
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
REACT_APP_ANALYTICS_ID=your-analytics-id

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/csv

# Maintenance Windows
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is currently under maintenance. Please try again later.

# Monitoring
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true